{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["h", "hpp", "c", "cpp", "objc", "objcpp" ],
            "rootPatterns": [ ".ccls",  "compile_commands.json",  ".vim/", ".git/", ".hg/" ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    }
}
